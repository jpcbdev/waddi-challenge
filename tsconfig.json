{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}